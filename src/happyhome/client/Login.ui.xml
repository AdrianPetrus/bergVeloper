<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:c="urn:import:com.google.gwt.user.cellview.client">

	<g:HTMLPanel>		
		<div class="container">
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<div class="login-panel panel panel-default">
						<div class="panel-heading">
							<h3 class="panel-title">Please Sign In</h3>
						</div>
						<div class="panel-body">
							<g:HTML ui:field='errorLabel'>
							</g:HTML>
							<form role="form">
								<fieldset>
									<div class="form-group">
									<g:TextBox ui:field='textAlias' styleName="form-control"></g:TextBox>										
									</div>
									<div class="form-group">
										<g:TextBox ui:field='textPassword' styleName="form-control"></g:TextBox>
									</div>									
									<!-- Change this to a button or input when using this as a form -->
									<g:Button ui:field='loginButton' styleName="btn btn-lg btn-success btn-block">
									</g:Button>									
								</fieldset>
							</form>
						</div>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>